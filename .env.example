# Environment Variables Template
# Copy this file to .env.local and fill in the actual values

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUSHABLE_KEY=your_stripe_publishable_key_here
STRIPE_SUCCESS_URL=https://yourapp.com/payment/success
STRIPE_CANCEL_URL=https://yourapp.com/payment/cancel

# Authentication
AUTH_SECRET=your_auth_secret_here
AUTH_GOOGLE_ID=your_google_oauth_client_id_here
AUTH_GOOGLE_SECRET=your_google_oauth_client_secret_here

# Email Configuration
EMAIL_SERVER_USER=your_email_server_user_here
EMAIL_SERVER_PASSWORD=your_email_server_password_here
EMAIL_SERVER_HOST=your_email_server_host_here
EMAIL_FROM=noreply@yourapp.com
SHOP_EMAIL=shop@yourapp.com

# Application URLs
BASE_APP_URL=https://yourapp.com
NEXT_PUBLIC_CDN_SERVER_URL=https://yourcdn.com

# Upload Configuration
UPLOAD_URL_LINK=your_upload_url_here
UPLOAD_API_KEY=your_upload_api_key_here

# Grayscale Conversion
GHOST_GRAYSCALE_API_KEY=your_grayscale_api_key_here

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Other
CANCEL_SECRET=your_cancel_secret_here
NODE_ENV=development
